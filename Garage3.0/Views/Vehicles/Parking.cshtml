@model Garage3.Models.Vehicle

@{
    ViewData["Title"] = "Parking";
}

<div class="row">
    <div class="col text-center">
        <h1><strong>Welcome to Garage Inc.</strong></h1>
    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6 text-center">
        <h5>Please enter your license number.</h5>
        <form asp-action="ParkingProcess">
            <div class="form-group">
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="ParkingProcess" value="Park Vehicle" id="submit-button" class="btn btn-lg btn-secondary" />                
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}