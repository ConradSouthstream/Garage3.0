@inject Garage3.Services.IRetrieveVehicleService service
@model Garage3.Models.ViewModels.RetrieveVehicleViewModel



@ViewData["Title"] = "Retrieve Parked Vehicle";

<h1>Retrieve </h1>


<div>
    <h4>Vehicle</h4>
    <hr />

    <div class="container w-25">
      <form asp-controller="Vehicles" asp-action="RetrieveParkedVehicle">

            <label>Select a Licence number</label>

            <div class="form-group ">
                <select asp-for="SelectedVehicle" asp-items="@await service.GetParkedVehicles()" class="form-control box-adjustment ">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <input type="submit" value="RetrieveVehicle" class="btn btn-primary">
        </form>
    </div>
    <div>
        <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="Home">Back to main menu</a>
    </div>

