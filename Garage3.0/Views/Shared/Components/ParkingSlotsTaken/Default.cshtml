@using Garage3.Views.Shared.Components
@model ParkingSlotCount
@{
    if (Model.SlotsTaken == Model.SlotsTotal && Model.IsGarageFull == true)
    {
        @: Garage is full
    }
    else if (Model.SlotsTaken == Model.SlotsTotal && Model.IsGarageFull == false)
    {
        @: Garage is full except for shared motorcycle parking spots
    }
    else
    {
        @: @Model.SlotsTaken parking spaces out of @Model.SlotsTotal are occupied
    }
}
<html>
<head>
    @*Script taken from here
    https://developers.google.com/chart/interactive/docs/gallery/piechart#data-format*@

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Status', 'Count'],
            ['Parking spaces free', @Model.SlotsTotal - @Model.SlotsTaken],
            ['Parking spaces taken', @Model.SlotsTaken]
        ]);

        var options = {
            is3D: true,
            backgroundColor: '#131313',            
            legend: {textStyle: { color: '#f5f5f5' }}
              };

              var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
              chart.draw(data, options);
              }
    </script>
</head>
<body>
    <div id="piechart_3d"></div>
</body>
</html>